print("MongoDB shell version v" + db.version());
print("connecting to: mongodb://127.0.0.1:27017");
print("MongoDB server version: " + db.version());

var databases = db.adminCommand({listDatabases: 1}).databases;
databases.forEach(function(database) {
  var sizeInGB = (database.sizeOnDisk / (1024 * 1024 * 1024)).toFixed(3);
  print(database.name + "\t" + sizeInGB + "GB");
});

print("bye");
